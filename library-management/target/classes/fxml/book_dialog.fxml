<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.library.ui.BookDialogController"
      spacing="10" alignment="CENTER" style="-fx-padding:20;">

    <Label text="Book Details" style="-fx-font-size:16"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Title:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="titleField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Author:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="authorField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="ISBN:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="isbnField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Copies:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="copiesField" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10">
        <Button text="Save" onAction="#onSave"/>
        <Button text="Cancel" onAction="#onCancel"/>
    </HBox>
</VBox>
