<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.library.ui.LoanDialogController"
      spacing="10" alignment="CENTER" style="-fx-padding:20;">

    <Label text="Loan Details" style="-fx-font-size:16"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Book ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="bookIdField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Member ID:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="memberIdField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Loan Date:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <DatePicker fx:id="loanDatePicker" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Return Date:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <DatePicker fx:id="returnDatePicker" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
    </GridPane>

    <HBox spacing="10">
        <Button text="Save" onAction="#onSave"/>
        <Button text="Cancel" onAction="#onCancel"/>
    </HBox>
</VBox>


